doi = {10.3390/atmos11030248},
issn = {20734433},
journal = {Atmosphere},
keywords = {Convective rain and bright band,DSD parameters,Diurnal variation,MIRA35c},
number = {3},
title = {{Rainfall characteristics in the mantaro basin over tropical andes from a vertically pointed profile rain radar and in-situ field campaign}},
