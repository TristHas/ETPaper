journal = {Journal of Hydrology},
keywords = {Bayesian model averaging,Hydrological modeling,Satellite precipitation,Streamflow},
pages = {213--225},
publisher = {Elsevier B.V.},
title = {{Comprehensive evaluation of multi-satellite precipitation products with a dense rain gauge network and optimally merging their simulated hydrological flows using the Bayesian model averaging method}},
url = {http://dx.doi.org/10.1016/j.jhydrol.2012.05.055},
