publisher = {Elsevier Ltd},
title = {{Assessing data assimilation frameworks for using multi-mission satellite products in a hydrological context}},
url = {https://doi.org/10.1016/j.scitotenv.2018.08.032 http://dx.doi.org/10.1016/j.advwatres.2017.07.001 https://linkinghub.elsevier.com/retrieve/pii/S0048969718330018},
