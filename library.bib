journal = {Environmental Research Letters},
keywords = {Brazil,agricultural abandonment,agricultural expansion,land suitability,remote sensing},
number = {6},
title = {{Recent cropping frequency, expansion, and abandonment in Mato Grosso, Brazil had selective land characteristics}},
