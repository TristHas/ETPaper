keywords = {Araguari River,Channel capture,Estuarine morphodynamic,Landscape change,Water budget,Water quality},
pages = {887--899},
pmid = {29274612},
publisher = {Elsevier B.V.},
title = {{The impact of channel capture on estuarine hydro-morphodynamics and water quality in the Amazon delta}},
