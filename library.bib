journal = {Journal of Hydrology},
keywords = {Amazon basin,Satellite-estimated precipitation,TRMM},
number = {1-4},
pages = {207--216},
title = {{Daily hydrological modeling in the Amazon basin using TRMM rainfall estimates}},
volume = {360},
year = {2008}
}
