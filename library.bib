doi = {10.1002/hyp.11033},
file = {::},
issn = {10991085},
journal = {Hydrological Processes},
keywords = {braided rivers,effective hydraulics,hydrodynamical signature,satellite altimetry},
number = {4},
pages = {756--767},
title = {{Hydraulic visibility: Using satellite altimetry to parameterize a hydraulic model of an ungauged reach of a braided river}},
volume = {31},
