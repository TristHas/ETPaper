doi = {10.5194/hess-2018-48},
file = {:home/vpellet/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Tootchi, Jost, Ducharne - 2018 - Multi-source global wetland mapping combining surface water imagery and groundwater constraints.pdf:pdf},
