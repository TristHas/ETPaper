doi = {10.1016/j.rse.2020.112191},
issn = {00344257},
journal = {Remote Sensing of Environment},
keywords = {Evapotranspiration,GRACE,Global hydrology,Precipitation,Remote sensing,Terrestrial water budget,Water cycle},
month = {jan},
pages = {112191},
publisher = {Elsevier Inc.},
title = {{Remotely sensed ensembles of the terrestrial water budget over major global river basins: An assessment of three closure techniques}},
volume = {252},
year = {2021}
}
