journal = {Ecological Applications},
keywords = {Amazon,Climate change,ENSO,Fire frequency,Fire history,Fire interval,Fire regime,Fire size,Forest fires,Forest fragmentation,Land use change,Seasonality},
number = {6},
pages = {1493--1505},
pmid = {26552259},
title = {{Landscape fragmentation, severe drought, and the new Amazon forest fire regime}},
volume = {25},
