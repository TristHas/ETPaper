doi = {10.5194/hess-20-803-2016},
file = {:home/vpellet/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Michel et al. - 2016 - The WACMOS-ET project - Part 1 Tower-scale evaluation of four remote-sensing-based evapotranspiration algorithms.pdf:pdf},
