doi = {10.1016/j.jhydrol.2007.10.055},
isbn = {0022-1694},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Amazon river,Floodplain,Hydrologic residence time,River-floodplain interactions},
number = {1-2},
pages = {18--30},
title = {{Floodplain hydrology in an Amazon floodplain lake (Lago Grande de Curua{\'{i}})}},
