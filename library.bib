pages = {170--184},
publisher = {Elsevier Inc.},
title = {{Time-series analysis of Landsat-MSS/TM/OLI images over Amazonian waters impacted by gold mining activities}},
url = {http://dx.doi.org/10.1016/j.rse.2014.04.030},
