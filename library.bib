isbn = {1944-7973},
issn = {00431397},
journal = {Water Resources Research},
keywords = {1846 Model calibration,1847 Modeling,1855 Remote sensing,1866 Soil moisture,Ensemble Kalman Filter,calibration,hydrological modeling,microwave remote sensing,soil moisture},
number = {8},
pages = {6874--6891},
title = {{The benefits of using remotely sensed soil moisture in parameter identification of large-scale hydrological models}},
url = {http://dx.doi.org/10.1002/2013WR014639%5Cnhttp://doi.wiley.com/10.1002/2013WR014639},
volume = {50},
