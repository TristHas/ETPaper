eprint = {arXiv:1011.1669v3},
isbn = {1091-6490 (Electronic)\r0027-8424 (Linking)},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {23},
pages = {9601--9606},
pmid = {23671098},
title = {{Dependence of hydropower energy generation on forests in the Amazon Basin at local and regional scales}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1215331110},
volume = {110},
year = {2013}
