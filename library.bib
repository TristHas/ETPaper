url = {https://onlinelibrary.wiley.com/doi/full/10.1029/2007WR006562 https://onlinelibrary.wiley.com/doi/abs/10.1029/2007WR006562 https://agupubs.onlinelibrary.wiley.com/doi/10.1029/2007WR006562},
