doi = {10.1002/2015WR018417},
file = {:home/vpellet/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Girotto et al. - 2016 - Assimilation of gridded terrestrial water storage observations from GRACE into a land surface model.pdf:pdf},
