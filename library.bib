doi = {10.3390/rs8070544},
file = {::},
issn = {20724292},
journal = {Remote Sensing},
keywords = {GPM,GPROF,GoAmazon,IMERG,Radar rainfall estimates,Satellite rainfall estimates,Uncertainty quantification},
