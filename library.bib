doi = {10.3389/feart.2020.00064},
issn = {22966463},
journal = {Frontiers in Earth Science},
keywords = {Andes (South America),Sou nailing,atmospheric circulation,hydrological cycle,rainfall variability},
number = {March},
pages = {1--20},
title = {{Hydroclimate of the Andes Part I: Main Climatic Features}},
volume = {8},
year = {2020}
