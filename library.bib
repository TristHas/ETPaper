doi = {10.1016/j.jhydrol.2020.125473},
issn = {00221694},
journal = {Journal of Hydrology},
keywords = {Continental Modeling,Data assimilation,Global hydrological model,Observing System Simulation Experiment,Surface Water and Ocean Topography},
number = {125473},
title = {{Assimilation of future SWOT-based river elevations, surface extent observations and discharge estimations into uncertain global hydrological models}},
