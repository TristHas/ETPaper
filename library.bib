file = {:home/vpellet/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Guimberteau et al. - 2013 - Future changes in precipitation and impacts on extreme streamflow over Amazonian sub-basins.pdf:pdf},
issn = {17489326},
