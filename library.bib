journal = {IEEE Journal of Selected Topics in Applied Earth Observations and Remote Sensing},
keywords = {Kriging,SWOT,river height and discharge,temporal resolution},
number = {3},
pages = {1719--1729},
title = {{Improving temporal coverage of the SWOT mission using spatiotemporal kriging}},
volume = {6},
