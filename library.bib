journal = {Journal of Geophysical Research: Atmospheres},
number = {D},
pages = {2111},
title = {{Role of convection triggers in the simulation of the diurnal cycle of precipitation over the United States Great Plains in a general circulation model}},
url = {http://adsabs.harvard.edu/cgi-bin/nph-data_query?bibcode=2008JGRD..113.2111L&link_type=EJOURNAL},
volume = {113},
year = {2008}
