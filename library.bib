doi = {10.5194/gmd-7-931-2014},
file = {:home/vpellet/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Szczypta et al. - 2014 - Suitability of modelled and remotely sensed essential climate variables for monitoring Euro-Mediterranean droug.pdf:pdf},
