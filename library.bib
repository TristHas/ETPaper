issn = {08856087},
journal = {Hydrological Processes},
keywords = {Evapotranspiration,GRACE,Remote sensing,Water budget},
number = {26},
pages = {4082--4092},
title = {{Estimating evapotranspiration using an observation based terrestrial water budget}},
