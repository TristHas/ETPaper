pages = {Q09007},
publisher = {Blackwell Publishing Ltd},
title = {{Movement of Amazon surface water from time-variable satellite gravity measurements and implications for water cycle parameters in land surface models}},
url = {http://doi.wiley.com/10.1029/2010GC003214},
